{
  "name": "hcl-color-picker",
  "version": "0.1.0",
  "description": "Color picker in HCL and Lab colorspace",
  "main": "index.js",
  "scripts": {
    "build:ts": "tsc -p src",
    "build:sass": "sass sass/app.scss:dist/app.css",
    "build:webpack": "webpack",
    "build": "npm run build:ts && npm run build:sass && npm run build:webpack",
    "watch:ts": "tsc -p src -w",
    "watch:webpack": "webpack -w",
    "watch:sass": "sass --watch sass/app.scss:dist/app.css",
    "watch": "multirun-npm watch:ts watch:webpack watch:sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donghaoren/HCLColorPicker.git"
  },
  "keywords": [
    "color",
    "picker",
    "hcl",
    "lab"
  ],
  "author": "Donghao Ren <donghao.ren+npm@gmail.com> (https://donghaoren.org/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/donghaoren/HCLColorPicker/issues"
  },
  "homepage": "https://github.com/donghaoren/HCLColorPicker#readme",
  "dependencies": {
    "chroma-js": "^1.3.4",
    "d3": "^4.9.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "stardust-core": "^0.1.1",
    "stardust-webgl": "^0.1.1",
    "typescript": "^2.4.1"
  },
  "devDependencies": {
    "@types/chroma-js": "^1.3.0",
    "@types/d3": "^4.9.0",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "multirun": "^0.3.1",
    "webpack": "^3.0.0"
  }
}
